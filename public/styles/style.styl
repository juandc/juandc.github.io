@import 'nib'
@import 'https://fonts.googleapis.com/css?family=Lato|Montserrat|Roboto'
@import 'https://cdn.rawgit.com/dalmata/dalmata/master/public/css/style.min.css'

flex()
  display -webkit-box
  display flex

html
  overflow-x hidden

body
  // background linear-gradient(right, #00001C, #09093A)
  // background linear-gradient(left, #f55, #955)
  background #f5f5f8
  min-height 100vh
  margin 0
  padding 0

nav.menu
  background-color #111
  fixed top left right
  height 50px
  margin 0
  padding 5px 15px
  z-index 10
  .container
    padding-top 0
  figure.img-logo
    display inline-block
    height 100%
    margin 0
    padding 0
    width 50px
    img
      border-radius 50%
      width 100%
      height 100%
      margin-right 50px
    h2
      color #f5f5f8
      font-family 'Montserrat', Arial, "Helvetica Neue", Helvetica, sans-serif
      font-size 20px
      min-width 150px
      width auto
      margin 0
      padding 2px
      vertical-align middle
  ul.menu-list
    align-items center
    background-color rgba(#000, .99)
    color #f5f5f8
    fixed top right bottom left
    flex()
    flex-wrap wrap
    font-family 'Montserrat', Arial, "Helvetica Neue", Helvetica, sans-serif
    font-size 20px
    font-weight bold
    justify-content center
    left 100%
    list-style none
    padding 50px 0
    margin 0
    transition all .3s linear
    text-align center
    width 100vw
    &.active
      left 0
    a
      border-bottom 1px solid #f5f5f8
      display block
      padding 50px
      text-transform uppercase
      width 90%
      &:last-child
        border-bottom none
  .menu-ham
    fixed top 5px right 10px
    align-items center
    background-color #f5f5f8
    border-radius 50%
    color #333
    flex()
    font-size 30px
    height 45px
    justify-content center
    margin 2px
    text-align center
    vertical-align middle
    width 45px

header.header
  margin-top 60px
  font-family 'Montserrat', Arial, "Helvetica Neue", Helvetica, sans-serif
  .content
    flex()
    justify-content center
    margin auto
    max-width 300px
    padding 0 20px
    text-align center
    width 100%

h2.special-title
  color #f55
  font-family 'Montserrat', Arial, "Helvetica Neue", Helvetica, sans-serif
  font-size 45px
  font-variant small-caps
  line-height 60px
  margin 30px 0 25px
  text-align center
  text-shadow 0px 4px 0px #473f3f
  text-transform uppercase
  width 100%
  &-2
    color #353267
    line-height 10px
    text-shadow 0px 4px 0px #E4B1B1
  &-3
    color #00FF9F
    line-height 10px
    text-shadow 1px 4px 0px #B516DB

.center
  margin 0 auto
